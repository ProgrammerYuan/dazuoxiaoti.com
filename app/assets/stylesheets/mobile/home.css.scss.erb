@import "common";

#question_page {
  padding: 0;
  background: #fffff0;

  .page_header {
    position: relative;
    background: linear-gradient(#F93, #FF8000);
    opacity: 0.9;
    background-color: #F93;
    color: #fff;
    display: table;
    height: 40px;
    width: 100%;
    .header_item {
      display: table-cell;
      vertical-align: middle;
      line-height: 100%;
      padding: 10px;
      img {
        height: 30px;
      }
    }
    .title {
      width: 100%;
      font-size: 1.4em;
      vertical-align: middle;
      text-align: center;
      text-shadow: none;
      height: 100%;
      line-height: 100%;

      h3 {
        display: inline-block;
        position: relative;
        left: 4px;
      }

      .guide_page_icon {
        display: inline-block;
        position: relative;
        top: -10px;
        img {
          height: 12px;
        }
      }
    }
    .left_link {
      float: left;
    }
    .right_link {
      float: right;
    }
    .opened {
      background: none repeat scroll 0% 0% #FF6000;
    }
  }

  .fr {
    float: right;
  }
}

#question_set_panel {
  text-shadow: none;
  background: #fffff0;

  #no_question_notice {
    text-align:center;
    display:none;
  }
  .ui-li-thumbnail {
    margin: 10px 10px 10px 40px;
  }
  .ui-li-heading {
    position: relative;
    left: 8px;
    margin: 0;
  }
  .ui-li-desc {
    position: relative;
    left: 8px;
    height: 30px;
    white-space: normal;
    margin: 2px 0 0;
  }
  .left-icon {
    position: absolute;
    left: 8px;
    top: 27px;
    width: 24px;
  }
}

.login_partial{
  padding: 30px 30px 20px;
  .register {
    text-align: right;
    a {
      font-weight: bold;
      color: $brown;
      text-decoration: underline;
      font-size: 9pt;
    }
  }
  .login_link {
    display: block;
    float: left;
    background: $brown;
    padding: 2px 10px 2px 10px;
    width: 30px;
    text-align: center;
    a {
      font-size: 9pt;
      color: $white;
    }
  }
  a.auth {
    color: $white;
    background-color: $light_blue;
    display: block;
    font-size: 10pt;
    margin-bottom: 10px;
    padding: 5px 0px 5px 18px;

    img {
      vertical-align: top;
      height: 18px;
      margin-right: 10px;
    }

    &:hover {
      background-color: #fcfcf0;
      color: $grey;
    }
  }
  p.login_notice {
    margin: 10px
  }
}

.user_stats {
  height: 100px;
  color: $dark_grey;
  .photo{
    img {
      height: 80px;
      width: 80px;
    }
    float: left;
    height: 80px;
    width: 80px;
    border: 1px $blue solid;
    margin-right: 20px;
  }
  .info {
    width: 150px;
    position: absolute;
    left: 110px;
    .name {
      font-size: 14pt;
      line-height: 25px;
      color: $brown;
    }

    .stats {
      line-height: 30px;
      font-size: 10pt;
      .labels {
        color: $grey;
      }
      .numbers {
        color: $orange;
      }
      .empty {
        width: 8px;
        display: inline-block;
      }
    }

    .logout_link {
      .ui-btn {
        padding-top: 5px;
        padding-bottom: 5px;
      }
      input {
        font-size: 10pt;
        height: 15px;
      }
      margin-top: 5px;
      text-align: right;
      display: inline-block;
      zoom: 1;
      *display: inline;
    }
  }

  .badge_label {
    line-height: 35px;
    color: $orange;
    border-bottom: 1px solid $grey_border;
  }

  .badges {
    vertical-align: top;
    line-height: 15px;
    margin: 15px 0px;
    padding-left: 2px;
    color: $brown;
  }
}

#guide_page {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  z-index: 1000;
  .item {
    z-index: 1000;
    .arrow {
      width: 50px;
      img {
        width: 100%;
      }
    }
    .text {
      position: absolute;
      width:  160px;
      img {
        width: 100%;
      }
    }
  }

  #background {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 500;
    background-color: black;
    opacity: 0.8;
  }

  #project {
    position: fixed;
    .text {
      left: -5px;
    }
  }

  #question_set {
    position: fixed;
    right: 0;
    .text {
      right: -5px;
    }
  }


  #intro {
    top: 50%;
    position: absolute;
    img {
      width: 80%;
      margin-left: 10%;
      margin-right: 10%;
    }
    #quit_btn {
      display: inline-block;
      text-align: center;
      font-size: 20px;
      height: 20px;
      vertical-align: middle;
      color: white;

      -webkit-border-radius: 10px;
      -moz-border-radius: 10px;
      border-radius: 10px;

      background-color: #FF6000;
      width: 40%;
      margin: 50px 25% 10px;
      padding: 10px 5% 10px;
    }
  }
}

.ui-panel .ui-panel-inner {
    overflow: auto;
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    -webkit-overflow-scrolling: touch;
}
