.user_stats
  .photo
    -if current_user.avatar_url
      = image_tag current_user.avatar_url, :alt => current_user.nickname
    - else
      = image_tag asset_path('static/auth/default.jpg'), :alt => current_user.nickname
  .info
    %p.name= current_user.nickname
    %p.stats
      %span.labels 答对
      %span.numbers= current_user.correct_count
      %span.empty
      %span.labels 排名
      %span.numbers= current_user.rank.first  
    .logout_link= button_to t(:'user.session.logout'), destroy_user_session_path, :method => :delete, :form => {"data-ajax" => "false"}
