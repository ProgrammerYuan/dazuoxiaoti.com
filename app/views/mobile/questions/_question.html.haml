.question
  .skip_button
    - if !answered
      %a.skip.remote{:href => skip_mobile_question_path(@question.id, :project_id => params[:project_id])}
    - else
      %a.next.remote{:href => random_mobile_questions_path(:question_set => params[:question_set], :project_id => params[:project_id])}
  = question.title
.share
  .correct_rate
    正确率：#{@question.correct_rate}%
  - @message = share_question_message @question, @project
  - @path = "#{share_question_path @question.token, @project, current_user, 'question', @question_set}"
  = render :partial => 'mobile/questions/social_links', :locals => {:message => @message, :path => @path}
  .fr
    分享到:
#solution
  - if !answered
    = form_for([:mobile, question, question.answers.build], :remote => true, :html => {:class => "question_form"}) do |f|
      %input{:type => :hidden, :name => :project_id, :value => @project.id}
      %input#answer{:type => :hidden, :name => "answer[choice]", :value => ""}
      %input#index{:type => :hidden, :name => "index", :value => 0}
    - @choices.each_with_index do |choice, index|
      = link_to choice, "#", :onclick=>"$.submit_answer('#{choice}', #{index});return false;", :class => "choice"
  - else 
    %a.remote{:href => random_mobile_questions_path(:question_set => params[:question_set], :project_id => params[:project_id]), :onclick => "return false;"}
    - @question.choices.each_with_index do |choice, index|
      .choice_row
        .mark
          -if question.correct_index == index
            .correct
          -elsif selected_index == index
            .wrong
        = choice
    -if !question.explanation.empty?
      .explanation
        .ex_title= t(:'answer.explanation')
        = question.explanation
.progress
  - if false
  -else
    您为本活动答对了
    %span.orange= user_correct_count
    题。
    - if @project.common_data.rate < 1000 && !([12,14].include? @project.id.to_i)
      还差
      %span.orange= @project.common_data.rate - user_correct_count % @project.common_data.rate
      题就可以独立助捐
      %span.orange= (user_correct_count/@project.common_data.rate + 1) * @project.common_data.unit_rate
      #{@project.common_data.benefit.unit}#{@project.common_data.benefit.short_name}。
      .progress_bar_outter
        .progress_bar_inner{:style => "width:#{ ( user_correct_count % @project.common_data.rate )*100/ @project.common_data.rate}%"}
      .clear
    - elsif !([12,14].include? @project.id.to_i)

      还差
      %span.orange= @project.common_data.rate - user_correct_count % @project.common_data.rate
      题才能独立助捐
      %span.orange= (user_correct_count/@project.common_data.rate + 1) * @project.common_data.unit_rate
      #{@project.common_data.benefit.unit}#{@project.common_data.benefit.short_name}.
    - else
