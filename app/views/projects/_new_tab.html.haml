.project_tab.tab.displayed
  .project_tag
    - if on_question_page
      .project_button
        = link_to image_tag(asset_path("static/project_button.png"), :alt => '查看详情'), project_path(project), :onclick=>"_gaq.push(['_trackEvent', 'Internal', 'project_detail', 'project_tab']);"
    = project.equation
  .project_explanation
    = project.common_data.tagline
  
  .project_tongji
    %span.numbers.participation_count #{project.common_data.participation_count}人
    已参与 累计答对
    %span.numbers.correct_count #{project.common_data.correct_count}题

  .project_numbers
    .project_coordinator
      .coordinator_label
        爱心传送门
      .coordinator_logo
        %a.image{:href => "http://daaiqc.taobao.com/", :style=>"margin-top:10px",:target => "_blank", :onclick=>"_gaq.push(['_trackEvent', 'Outbound', 'Coordinator', 'project_tab']);"}
          = image_tag(organization_image_path(project.common_data.coordinator), :alt => project.common_data.coordinator.name)
    .project_stats
      .project_label_title
        您的人气，我来认领
      .project_label_content
        网友十分热情的来答问题，也欢迎企业来认领高涨的爱心人气，为大爱清尘做出爱心支持。
      .project_label_image
        %a(href="/donate")
          = image_tag(asset_path("static/qiye.png"))
     
  .clear
